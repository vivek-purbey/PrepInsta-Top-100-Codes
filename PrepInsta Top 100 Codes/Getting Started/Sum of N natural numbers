#include<bits/stdc++.h>
using namespace std;
int main(){
    int tc; cin>>tc; while(tc--){
        int num; cin>>num;
        int sum=0;
        for(int i=1;i<=num;i++){
            sum+=i;
        }
        cout<<sum<<endl;
        
        //Method-2: cout<<(num*(num+1)/2<<endl;
        
    }
    return 0;
}
