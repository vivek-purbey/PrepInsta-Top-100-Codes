#include<bits/stdc++.h>
using namespace std;
int main(){
    int tc; cin>>tc; while(tc--){
        int numS, numE; cin>>numS>>numE;
        int sum=0;
        for(int i=numS;i<=numE;i++){
            sum+=i;
        }
        cout<<sum<<endl;
        
        //T.C=O(n) and S.C=O(1)
        
    }
    return 0;
}
